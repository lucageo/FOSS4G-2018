<?xml version="1.0" encoding="ISO-8859-1"?>
<StyledLayerDescriptor version="1.0.0" 
xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd" 
xmlns="http://www.opengis.net/sld" 
xmlns:ogc="http://www.opengis.net/ogc" 
xmlns:xlink="http://www.w3.org/1999/xlink" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- a Named Layer is the basic building block of an SLD document -->
  <NamedLayer>
    <Name>wdpa_latest</Name>
    <UserStyle>
      <Title>WDPA blue borders</Title>
      <Abstract>WDPA blue borders</Abstract>      
      <FeatureTypeStyle>
        <Rule>
          <Name>WDPA Marine</Name>    
          <Title>Marine</Title>
            <ogc:Filter>
         <ogc:PropertyIsEqualTo>
           <ogc:PropertyName>marine</ogc:PropertyName>
           <ogc:Literal>2</ogc:Literal>
         </ogc:PropertyIsEqualTo>
       </ogc:Filter>     
          <PolygonSymbolizer>
            <Fill>
              <CssParameter name="fill">#72b8d5</CssParameter>
              <CssParameter name="fill-opacity">0.6</CssParameter>
            </Fill>
            <Stroke>
              <CssParameter name="stroke">#72b8d5</CssParameter>
              <CssParameter name="stroke-width">0</CssParameter>
              <CssParameter name="stroke-opacity">1</CssParameter>
            </Stroke>
          </PolygonSymbolizer>
        </Rule>
        <Rule>
          <Name>WDPA Marine</Name>    
          <Title>Coastal</Title>
            <ogc:Filter>
         <ogc:PropertyIsEqualTo>
           <ogc:PropertyName>marine</ogc:PropertyName>
           <ogc:Literal>1</ogc:Literal>
         </ogc:PropertyIsEqualTo>
       </ogc:Filter>     
          <PolygonSymbolizer>
            <Fill>
              <CssParameter name="fill">#266e83</CssParameter>
              <CssParameter name="fill-opacity">0.6</CssParameter>
            </Fill>
            <Stroke>
              <CssParameter name="stroke">#266e83</CssParameter>
              <CssParameter name="stroke-width">0</CssParameter>
              <CssParameter name="stroke-opacity">1</CssParameter>
            </Stroke>
          </PolygonSymbolizer>
        </Rule>
                <Rule>
          <Name>WDPA Terrestrial</Name>    
          <Title>Terrestrial</Title>
            <ogc:Filter>
        <ogc:PropertyIsLessThan>
           <ogc:PropertyName>marine</ogc:PropertyName>
           <ogc:Literal>1</ogc:Literal>
         </ogc:PropertyIsLessThan>
       </ogc:Filter>     
          <PolygonSymbolizer>
            <Fill>
              <CssParameter name="fill">#184c52</CssParameter>
              <CssParameter name="fill-opacity">0.5</CssParameter>
            </Fill>
            <Stroke>
              <CssParameter name="stroke">#184c52</CssParameter>
              <CssParameter name="stroke-width">0.5</CssParameter>
              <CssParameter name="stroke-opacity">0.7</CssParameter>
            </Stroke>
          </PolygonSymbolizer>
        </Rule>
      </FeatureTypeStyle>
    </UserStyle>
  </NamedLayer>
</StyledLayerDescriptor>
